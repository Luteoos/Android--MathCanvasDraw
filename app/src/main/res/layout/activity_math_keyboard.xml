<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded">

    <android.support.design.widget.FloatingActionButton
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:clickable="true" app:srcCompat="@color/colorAccent" android:id="@+id/fab"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:backgroundTint="@color/colorAccent"/>
    <android.support.v4.view.ViewPager
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:id="@+id/inputPager" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button2"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:id="@+id/tvFunction" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"

            tools:text="dssfdfdgfgfgfdgfdgdfgfdgfdgfdgdfgdfgdfgfdgdfgdfg"
            android:textSize="24sp" android:textColor="@color/colorFont" android:textAlignment="textStart"
            android:maxLines="1" app:layout_constraintEnd_toEndOf="parent"
            android:scrollbars="horizontal" android:maxLength="@android:integer/status_bar_notification_info_maxnum"/>
    <Button
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/button2"
            android:background="@drawable/ic_baseline_play_arrow_24px" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvFunction" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
</android.support.constraint.ConstraintLayout>