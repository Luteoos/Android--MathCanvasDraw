<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/rounded">
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@drawable/ic_play_arrow_dark"
            android:id="@+id/fabConfirm"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/colorAccent"
            android:id="@+id/tvFunctionBody" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/btnAddFunctionBody"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnAddFunctionBody"
            app:layout_constraintTop_toTopOf="@+id/btnAddFunctionBody"/>
    <Button
            android:text="Add equation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAddFunctionBody" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:textColor="@color/colorPrimary"
            android:background="@drawable/rounded_button" android:padding="5dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/etApprox"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:hint="Function Name"
            android:ems="10"
            android:id="@+id/etName" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnAddFunctionBody" android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text=""
            android:hint="Minimal"
            android:ems="10"
            android:id="@+id/etMin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/etMax" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnAddFunctionBody" android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal|numberSigned"
            android:text=""
            android:hint="Maximal"
            android:ems="10"
            android:id="@+id/etMax" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/etName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnAddFunctionBody" android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:text=""
            android:hint="Approximation"
            android:ems="10"
            android:id="@+id/etApprox" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/etMin" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnAddFunctionBody" android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>