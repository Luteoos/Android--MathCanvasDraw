<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/rvFunctionList"
            app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
    <Button
            android:text="Main Screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMainScreen"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_button" android:padding="10dp"
            android:textColor="@color/colorPrimary"/>
    <SurfaceView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/canvas"
            app:layout_constraintTop_toBottomOf="@+id/btnMainScreen"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline" android:layout_marginTop="8dp"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="500dp" android:id="@+id/guideline"/>
</android.support.constraint.ConstraintLayout>