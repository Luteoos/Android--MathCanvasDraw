<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="io.github.luteoos.mathcanvasdraw">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application android:allowBackup="true"
                 android:name=".MDStartup"
                 android:label="@string/app_name"
                 android:icon="@mipmap/ic_launcher"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:supportsRtl="true"
                 android:usesCleartextTraffic="true"
                 android:theme="@style/AppTheme" tools:ignore="GoogleAppIndexingWarning">
        <activity
                android:name=".view.activity.SplashScreen"
                android:theme="@style/LandingTheme"
                android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name=".view.activity.input.OnScreenMathKeyboard"
                android:theme="@style/Translucent"
        />
        <activity
                android:name=".view.activity.input.FunctionCreatorActivity"
                android:theme="@style/Translucent"
        />
        <activity android:name=".view.activity.MainScreen"
                  android:theme="@style/LandingTheme"
                  android:windowSoftInputMode="stateHidden|adjustPan"
        />
        <activity android:name=".view.activity.ChartDrawerActivity"
                  android:theme="@style/LandingTheme"
                  android:windowSoftInputMode="stateHidden|adjustPan"
        />
        <activity android:name=".view.activity.ChartCreatorActivity"
                  android:theme="@style/LandingTheme"
                  android:windowSoftInputMode="stateHidden|adjustPan"
        />
    </application>
</manifest>
